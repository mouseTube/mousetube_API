{
	"title": "Protocol",
	"description": "protocol description",
	"type": "object",
	"properties": {
		"animals":{
			"description": "information about animals",
			"type": "object",
			"properties": {
				"sex": {
					"description": "sex of the animal(s) recorded",
					"type": "string",
					"enum": [
						"male(s)",
						"female(s)",
						"male(s) & female(s)"
					]
				},
				"age": {
					"description": "age of the animal(s) recorded",
					"type": "string",
					"enum": [
						"pup",
						"juvenile",
						"adult"
					]
				},
				"housing": {
					"description": "housing condition of the animal(s) before the recording",
					"type": "string",
					"enum": [
						"grouped",
						"isolated",
						"grouped & isolated"
					]
				},
				"species": {
						"description": "species of the animal(s) recorded",
						"type": "string"
						}
			}
		},
		"context": {
			"description": "behavioural context used for the recording",
			"type": "object",
			"properties": {
				"number of animals": {
					"description": "number of animals present during recording",
					"type": "string",
					"enum": ["single", "dyad", "group (>2)"]
				},
				"duration": {
					"description": "duration of the recording",
					"type": "string",
					"enum": ["short term (<1h)", "mid term (<1day)", "long term (>=1day)"]
				},
				"cage": {
					"description": "type of recording cage",
					"type": "string",
					"enum": ["unfamiliar test cage", "familiar test cage", "home cage"]
				},
				"bedding": {
					"description": "presence of bedding during recording",
					"type": "string",
					"enum": ["bedding", "no bedding"]
				},
				"light_cycle": {
					"description": "time of the day or night (for the animal) during recording",
					"type": "string",
					"enum": ["day cycle", "night cycle"]
				},
				"temperature": {
					"properties": {
						"value": {
							"description": "value of the temperature",
							"type": "float"
						},
						"unit": {
							"description": "unit of the temperature",
							"type": "string",
							"enum": ["°C", "°F"]
						}
					}
				},
				"brightness": {
					"description": "brightness of the recording environment in Lux",
					"type": "float",
					"unit": "Lux"
				}
			}
		}
	}
}