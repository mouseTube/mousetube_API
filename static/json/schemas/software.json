{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Software",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Software Name",
        "maxLength": 255
      },
      "type": {
        "type": "string",
        "title": "Software Type",
        "enum": ["acquisition", "analysis", "acquisition and analysis"],
        "default": "acquisition"
      },
      "made_by": {
        "type": "string",
        "title": "Made By"
      },
      "description": {
        "type": "string",
        "title": "Description of the Software"
      },
      "technical_requirements": {
        "type": "string",
        "title": "Technical Requirements",
        "description": "Technical requirements for running the software, such as hardware specifications or dependencies."
      }
    },
    "required": ["name", "type"]
  }