{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Strain",
  "description": "Represents a rodent strain.",
  "type": "object",
  "required": ["name", "background", "species"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Strain Name",
      "description": "Name of the strain."
    },
    "background": {
      "type": "string",
      "title": "Genetic Background",
      "description": "Genetic background of the strain."
    },
    "bibliography": {
      "type": "string",
      "title": "Bibliography",
      "description": "Bibliographical references related to the strain."
    },
    "species": {
      "$ref": "species.json",
      "title": "Species"
    }
  }
}